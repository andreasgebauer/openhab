<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>WebappServlet</servlet-name>
		<servlet-class>org.openhab.ui.webapp.angular.internal.servlet.WebAppServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebappServlet</servlet-name>
		<url-pattern>/angular/sitemap/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CommandServlet</servlet-name>
		<servlet-class>org.openhab.ui.webapp.angular.internal.servlet.CmdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommandServlet</servlet-name>
		<url-pattern>/angular/cmd/*</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>ChartDataServlet</servlet-name>
		<servlet-class>org.openhab.ui.webapp.angular.internal.servlet.ChartDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChartDataServlet</servlet-name>
		<url-pattern>/angular/websocket</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>